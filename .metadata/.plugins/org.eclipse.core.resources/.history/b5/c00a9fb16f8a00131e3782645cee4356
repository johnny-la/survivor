	Button mainMenuButton;
	
	public PauseMenuHud(Stage stage, World world)
	{
		super(stage, world);
		
		//Creates the table instance used to arrange the buttons in a grid-like fashion.
		table = new Table();
		
	}

	@Override
	public void reset(float guiWidth, float guiHeight) 
	{
		
		
	}
}
