package com.jonathan.survivor;

public class MeleeWeapon extends Weapon
{
	/** Stores the range in world units of the melee weapon. */
	private float range;
	
	/** Accepts the name and the description of the melee weapon. */
	public MeleeWeapon(String name, String description, float damage)
	{
		super(name, description);
	}

	/** Gets the range in world units of the melee weapon. */
	public float getRange() {
		return range;
	}

	/** Sets the range in world units of the melee weapon. */
	public void setRange(float range) {
		this.range = range;
	}
	
	
}
