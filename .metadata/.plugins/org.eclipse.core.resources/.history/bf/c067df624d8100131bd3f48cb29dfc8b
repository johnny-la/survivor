package com.jonathan.survivor.managers;

import com.badlogic.gdx.utils.Array;
import com.badlogic.gdx.utils.Pool;
import com.esotericsoftware.spine.Skeleton;
import com.jonathan.survivor.Assets;
import com.jonathan.survivor.entity.Tree;

class SkeletonPool extends Pool<T>
{
	private Array<Skeleton> skeletons = new Array<Skeleton>();

	/** Stores the Assets singleton used to access the visual assets used by the game. */
	Assets assets = Assets.instance;
	
	/** Called when no free objects are available in the pool, and a new one must be created. */
	@Override
	public Tree newObject()
	{
		//Creates a new tree skeleton and adds it to the list of TreeSkeletons used to render the Tree GameObjects to the screen.
		skeletons.add(new Skeleton(assets.treeSkeletonData));
		//Create and return a new tree.
		return new Tree();
	}
	
	public Array<Skeleton> getSkeletons()
	{
		return skeletons;
	}
}
